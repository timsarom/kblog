			</tr>
			<tr>
				<td>Spiciness: </td>
				<td><%= post.spiciness %></td>
			</tr>
			<tr>
				<td>Satiety: </td>
				<td><%= post.satiety %></td>
			</tr>
			<tr>
				<td>Cleanliness: </td>
				<td><%= post.cleanliness %></td>
			</tr>
			<tr>
				<td>Service: </td>
				<td><%= post.service %></td>
			</tr>
		</tbody>
		<% end %>
