<% if flash[:alert] %>
	<%= flash[:alert] %>
<% end %>

<%= form_tag do %>
	<h2>Please Log In</h2>

	<div>
		<%= label_tag :name, 'Name:' %>
		<%= text_field_tag :name, params[:name] %>
	</div>
	<div>
		<%= label_tag :password, 'Password:' %>
		<%= password_field_tag :password, params[:password] %>
	</div>
	<div>
		<%= submit_tag "Login" %>
	</div>
<% end %>