<div class="card mb-3" id="comment-<%= comment.id %>">
		<% if comment.save %>
		<div class="card-header">
			<strong><%= comment.name %></strong> <span class="text-muted"><%= time_ago_in_words(comment.created_at.strftime("%F %H:%M")) %> ago</span>
		</div>
		<div class="card-body">
			<p class="card-text"><%= comment.text %></p>
		<% end %>
		<%= link_to 'Reply', new_post_comment_path(:post_id => @post.id, :parent_id => comment), format: :js, remote: true, class: "card-link" %>
		<% if session[:user_id] %>
			<%= link_to 'Delete', [comment.post, comment], method: :delete, remote: true, class: "delete" %>
		<% end %>
	</div>
</div>