<% if comment.save %>
	<%= comment.name %>
	<%= comment.text %>
	Comment added: <%= comment.created_at.strftime("%F %H:%M") %>
<% end %>
	<%= link_to "Reply", new_post_comment_path(:post_id => @post.id, :parent_id => comment) %>

<% if session[:user_id] %>
	<%= button_to 'Delete', [comment.post, comment], method: :delete %>
<% end %>